<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:padding="5dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/user"
                android:layout_marginLeft="30dp"
                />
            <TextView

                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome"
                android:textStyle="bold"
                android:textSize="24sp"
                android:fontFamily="@font/mulish"
                android:textColor="#000"


                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                />


        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/last_bullying_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/username"
            android:layout_marginLeft="30dp"
            
            android:backgroundTint="@drawable/home_shape_top"
           
            android:layout_marginRight="30dp"
            android:elevation="0dp"

            android:layout_marginBottom="10dp"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="25dp"
            >
            <LinearLayout
                android:orientation="horizontal"
                android:background="@drawable/home_shape_top"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/textvlottie"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:padding="10dp"


                    app:lottie_rawRes="@raw/time"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"


                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/txtvs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:textAlignment="gravity"
                        android:padding="10dp"
                        android:textStyle="bold"
                        android:text="Appoinment"
                        android:fontFamily="@font/mulish"
                        android:textColor="#fff"
                        android:layout_weight="1"

                        />
                    <TextView
                        android:id="@+id/time_left"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:textAlignment="gravity"
                        android:padding="10dp"
                        android:text="00 D : 00 H : 00 M"
                        android:fontFamily="@font/bold"
                        android:textColor="#fff"
                        android:layout_weight="1"

                        />
                </LinearLayout>



            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:id="@+id/lt2"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                app:lottie_rawRes="@raw/location"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                android:layout_weight="3"
                />
            <TextView
                android:id="@+id/location_text"

                android:layout_gravity="center_vertical"
                android:text="getting current location..."
                android:textSize="12dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:drawableRight="@drawable/ic_refresh_black_24dp"
                android:textColor="#000"
                android:fontFamily="@font/mulish"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <Button
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/emergency_btn"
            android:text="Report Live Bullying"
            android:id="@+id/report_btn"
            android:textAllCaps="false"
            android:textSize="20dp"
            android:textStyle="bold"
            android:fontFamily="@font/bold"
            android:textColor="#fff"
            />
        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <androidx.cardview.widget.CardView
                android:id="@+id/community_page"

                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:elevation="20dp"
                app:cardBackgroundColor="#a55eea"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="10dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Community\nPage"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:fontFamily="@font/bold"
                            android:textSize="18dp"
                            />
                        <TextView
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Get in touch with the\ncommunity of people. Share your thoughts"

                            android:textStyle="bold"
                            android:fontFamily="@font/robot_med"
                            android:textSize="13dp"
                            />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/boost_self_conf"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:elevation="20dp"
                app:cardBackgroundColor="#ff7979"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="10dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Boost Confidence"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:fontFamily="@font/bold"
                            android:textSize="18dp"
                            />
                        <TextView
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Activties that can\nactually boost your confidence"

                            android:textStyle="bold"
                            android:fontFamily="@font/robot_med"
                            android:textSize="13dp"
                            />
                    </LinearLayout>


                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
        <androidx.cardview.widget.CardView
            android:id="@+id/counsellors"

            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:elevation="20dp"
            app:cardBackgroundColor="#e84393"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Talk to\nCounsellors"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:fontFamily="@font/bold"
                        android:textSize="18dp"
                        />
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Get a free advice from\nour counsellors."

                        android:textStyle="bold"
                        android:fontFamily="@font/robot_med"
                        android:textSize="13dp"
                        />
                </LinearLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/motivation_story"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:elevation="20dp"
            app:cardBackgroundColor="#575fcf"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Inspiring\nStories"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:fontFamily="@font/bold"
                        android:textSize="18dp"
                        />
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Inspiring stories\nof various people"

                        android:textStyle="bold"
                        android:fontFamily="@font/robot_med"
                        android:textSize="13dp"
                        />
                </LinearLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="30dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">
            <androidx.cardview.widget.CardView
                android:id="@+id/my_reporters"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FB8C00"
                app:cardCornerRadius="10dp"

                app:cardBackgroundColor="#FB8C00"
                android:elevation="10dp"
                android:layout_weight="1"

                android:layout_margin="10dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_marginBottom="20dp"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/pluspro"

                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Add Reporters"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:fontFamily="@font/mulish"
                        android:textSize="14dp"
                        android:textColor="#fff"

                        />

                </LinearLayout>




            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView

                android:id="@+id/show_repoertss"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#e056fd"
                app:cardCornerRadius="10dp"

                app:cardBackgroundColor="#e056fd"
                android:elevation="10dp"
                android:layout_weight="1"

                android:layout_margin="10dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_marginBottom="20dp"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/pluspro"

                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Bullying Records"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:fontFamily="@font/mulish"
                        android:textSize="14dp"
                        android:textColor="#fff"

                        />

                </LinearLayout>




            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/nic_report"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                app:cardCornerRadius="10dp"
                android:layout_gravity="center_vertical"

                app:cardBackgroundColor="#485460"
                android:elevation="10dp"
                android:layout_weight="1"

                android:layout_margin="10dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_marginBottom="20dp"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/pluspro"

                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="File\ncomplain"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:fontFamily="@font/mulish"
                        android:textSize="14dp"
                        android:textColor="#fff"

                        />

                </LinearLayout>




            </androidx.cardview.widget.CardView>








        </LinearLayout>

    </LinearLayout>


</ScrollView>