<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="match_parent"

    tools:context=".PhoneNumberInput">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="30dp"

            android:src="@drawable/input_phone_number"
            />

        <EditText
            android:id="@+id/phn_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_margin="30dp"

            android:padding="15dp"
            android:textSize="17sp"
            android:background="@drawable/rounded_text"
            android:hint="Enter Phone number"
            android:fontFamily="sans-serif-medium"
            android:inputType="number"
            android:maxLength="10"

            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="40dp"
            android:layout_marginRight="40dp"
            android:text="Phone that you are entering must be of 10 digits and this is the primary source of your ID. A verification code will be sent on this number"
            android:textAlignment="center"
            android:textSize="13sp"
            android:fontFamily="@font/mulish"
            android:layout_marginLeft="40dp"

            />
        <Button
            android:id="@+id/continue_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_btn"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:text="Get OTP"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/bold"
            android:textColor="#fff"
            android:textSize="18sp"
            />
        <ProgressBar
            android:id="@+id/progress_circular"
            android:layout_marginTop="40dp"
            android:indeterminateTint="#FF9800"
            android:layout_gravity="center_horizontal"
            android:layout_width="50dp"
            android:visibility="invisible"
            android:layout_height="50dp"

            />
        <TextView
            android:id="@+id/progress_text"
            android:layout_width="wrap_content"
            android:layout_marginBottom="100dp"
            android:layout_height="wrap_content"
            android:text="Sending OTP..."
            android:visibility="invisible"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="30dp"
            android:textSize="16dp"
            android:layout_marginLeft="25dp"
            android:textColor="#807C7C"

            android:fontFamily="@font/mulish"
            />




    </LinearLayout>





</ScrollView>