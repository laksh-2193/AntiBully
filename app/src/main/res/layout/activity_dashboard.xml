<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F6F8"
    tools:context=".Dashboard">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:padding="5dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/user"
                android:layout_marginLeft="10dp"
                />
            <TextView

                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome"
                android:textStyle="bold"
                android:textSize="24sp"
                android:fontFamily="@font/mulish"
                android:textColor="#000"


                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_alignParentEnd="true"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="10dp"
                    android:id="@+id/logout_btn"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/logout"
                    android:layout_marginRight="20dp"
                    />

            </RelativeLayout>



        </LinearLayout>

        <androidx.cardview.widget.CardView

            android:id="@+id/last_bullying_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/username"
            android:layout_marginLeft="10dp"



            android:layout_marginRight="10dp"
            android:elevation="0dp"

            android:layout_marginBottom="10dp"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="25dp"
            >
            <LinearLayout
                android:orientation="horizontal"
                android:background="@drawable/home_shape_top"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/textvlottie"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:padding="10dp"


                    app:lottie_rawRes="@raw/time"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"


                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_marginTop="10dp"
                        android:paddingLeft="10dp"
                        android:id="@+id/txtvs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:textAlignment="gravity"

                        android:textStyle="bold"
                        android:text="Appoinment scheduled at"
                        android:fontFamily="@font/mulish"
                        android:textColor="#fff"
                        android:layout_weight="1"

                        />

                    <TextView
                        android:layout_marginLeft="10dp"
                        android:id="@+id/time_left"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/bold"

                        android:text="00 D : 00 H : 00 M"
                        android:textAlignment="gravity"
                        android:textColor="#fff"
                        android:textSize="18dp"

                        />
                    <Button
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:background="@drawable/emergency_btn"
                        android:text="Cancel Appoinment"
                        android:id="@+id/cancel_appoin_btn"
                        android:textAllCaps="false"
                        android:textSize="12dp"
                        android:padding="10dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/mulish"
                        android:textColor="#fff"
                        />

                </LinearLayout>



            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/lt2"
            android:background="#fff"
            android:elevation="20dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                app:lottie_rawRes="@raw/location"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                android:layout_weight="3"
                />
            <TextView
                android:id="@+id/location_text"

                android:layout_gravity="center_vertical"
                android:text="getting current location..."
                android:textSize="12dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:drawableRight="@drawable/ic_refresh_black_24dp"
                android:textColor="#000"
                android:fontFamily="@font/mulish"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <Button
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/emergency_btn"
            android:text="Report Live Bullying"
            android:id="@+id/report_btn"
            android:textAllCaps="false"
            android:textSize="20dp"
            android:textStyle="bold"
            android:fontFamily="@font/bold"
            android:textColor="#fff"
            />
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="30dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">
            <androidx.cardview.widget.CardView
                android:id="@+id/my_reporters"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FB8C00"
                app:cardCornerRadius="10dp"

                app:cardBackgroundColor="#FB8C00"
                android:elevation="10dp"
                android:layout_weight="1"

                android:layout_margin="10dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_marginBottom="20dp"

                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/add_reporters"

                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Add Reporters"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:fontFamily="@font/mulish"
                        android:textSize="14dp"
                        android:textColor="#fff"

                        />

                </LinearLayout>




            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView

                android:id="@+id/show_repoertss"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"

                app:cardBackgroundColor="#00897B"
                android:elevation="10dp"
                android:layout_weight="1"

                android:layout_margin="10dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_marginBottom="20dp"

                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/discrimination"

                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Bullying Records"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:fontFamily="@font/mulish"
                        android:textSize="14dp"
                        android:textColor="#fff"

                        />

                </LinearLayout>




            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/nic_report"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                app:cardCornerRadius="10dp"
                android:layout_gravity="center_vertical"

                app:cardBackgroundColor="#485460"
                android:elevation="10dp"
                android:layout_weight="1"

                android:layout_margin="10dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_marginBottom="20dp"

                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/complain"

                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Report complain"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:fontFamily="@font/mulish"
                        android:textSize="14dp"
                        android:textColor="#fff"

                        />

                </LinearLayout>




            </androidx.cardview.widget.CardView>








        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="0dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <androidx.cardview.widget.CardView
                android:id="@+id/community_page"
                android:padding="20dp"

                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:elevation="20dp"
                app:cardBackgroundColor="#F16DD7"
                >
                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_margin="10dp">
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/community"

                        />
                    <TextView
                            android:layout_width="match_parent"
                            android:textAlignment="center"
                            android:layout_height="wrap_content"
                            android:text="Community\nPage"
                            android:textColor="#fff"
                            android:textStyle="bold"
                            android:fontFamily="@font/bold"
                            android:textSize="18dp"
                            />



                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/boost_self_conf"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:elevation="20dp"
                app:cardBackgroundColor="#1CE293"
                >

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_margin="10dp">
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/confidence"

                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        android:text="Boost\nConfidence"
                        android:textColor="#fff"
                        android:textStyle="bold"
                        android:fontFamily="@font/bold"
                        android:textSize="18dp"
                        />



                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <androidx.cardview.widget.CardView
                android:id="@+id/counsellors"

                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:elevation="20dp"
                app:cardBackgroundColor="#FF779F"
                >
                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_margin="10dp">
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/consulting"

                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        android:text="Talk to\nCounsellors"
                        android:textColor="#fff"
                        android:textStyle="bold"
                        android:fontFamily="@font/bold"
                        android:textSize="18dp"
                        />



                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/motivation_story"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:elevation="20dp"
                app:cardBackgroundColor="#0ACFFF"
                >
                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_margin="10dp">
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/bedtime"

                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        android:text="Inspiring\nStories"
                        android:textColor="#fff"
                        android:textStyle="bold"
                        android:fontFamily="@font/bold"
                        android:textSize="18dp"
                        />



                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>


    </LinearLayout>





</ScrollView>