<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:background="#fff"
    android:layout_height="wrap_content">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="false"
            app:lottie_rawRes="@raw/done"
            />
        <TextView
            android:id="@+id/txtv"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:textSize="18dp"
            android:fontFamily="@font/mulish"
            android:padding="10dp"

            android:text="Your appoinment is already booked. Please wait for the scheduled time, our counsellors will call you. You can proceed only if you want to reschedule the timings."


            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/schedule_appont2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="end"
            android:text="Reschedule"
            android:padding="10dp"
            android:background="#fff"
            android:elevation="0dp"
            android:layout_marginRight="10dp"

            android:textAllCaps="false"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/robot_med"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp"
            />
    </LinearLayout>

</RelativeLayout>