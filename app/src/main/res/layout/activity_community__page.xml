<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".Community_Page">
    <HorizontalScrollView
        android:scrollbars="none"
        android:id="@+id/llg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/hider"
                android:fontFamily="sans-serif-medium"
                android:textStyle="bold"

                android:background="@drawable/community_page_rounded"
                android:text="Hide post editor"
                android:textColor="#303F9F"
                android:padding="10dp"
                />
            <TextView
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/active_users"
                android:fontFamily="sans-serif-medium"
                android:textStyle="bold"

                android:background="@drawable/community_page_rounded_active"
                android:text="0 Users Active"
                android:textColor="#1B5E20"
                android:padding="10dp"
                />
            <TextView
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/total_posts"
                android:fontFamily="sans-serif-medium"
                android:textStyle="bold"

                android:background="@drawable/community_page_totalposts"
                android:text="0 Posts"
                android:textColor="#FF8F00"
                android:padding="10dp"
                />

        </LinearLayout>

    </HorizontalScrollView>



    <androidx.cardview.widget.CardView
        android:layout_below="@id/llg"
        android:id="@+id/cards"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        app:cardBackgroundColor="#fff"
        android:elevation="20dp"
        app:cardCornerRadius="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"

                android:padding="15dp"
                android:textStyle="bold"
                android:textSize="17sp"

                android:background="@drawable/rounded_text"
                android:hint="Heading"
                android:fontFamily="@font/mulish"
                android:inputType="textMultiLine"


                />
            <EditText
                android:id="@+id/thoughts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"

                android:padding="15dp"
                android:textSize="17sp"
                android:drawableLeft="@drawable/ic_edit_black_24dp"

                android:background="@drawable/rounded_text"
                android:hint="Share your thoughts with community"
                android:fontFamily="@font/mulish"
                android:inputType="textMultiLine"


                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/choose_image"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:drawableLeft="@drawable/ic_image_black_24dp"
                    />
                <TextView
                    android:id="@+id/Upload_btn"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_btn"
                    android:layout_margin="10dp"
                    android:padding="10dp"
                    android:textColor="#fff"
                    android:fontFamily="@font/bold"
                    android:textAlignment="center"
                    android:layout_marginLeft="20dp"
                    android:text="POST"
                    android:textSize="18dp"
                    />

            </LinearLayout>
            <ImageView
                android:scaleType="fitCenter"
                android:id="@+id/post_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               android:layout_margin="10dp"
                />
        </LinearLayout>


    </androidx.cardview.widget.CardView>
    <ListView
        android:scrollbars="none"
        android:id="@+id/listview"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/cards"

        />







</RelativeLayout>